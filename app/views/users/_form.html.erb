<div class='well'>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <%= render 'shared/errors', object: @user %>
    <% end %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class='control-group'>
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone %>
    </div>  

    <%= f.submit @user.new_record? ? "Register": "Update Profile", class: "btn btn-success" %>
  <% end %>
</div>